				<cssClass><![CDATA[form-alignleft]]></cssClass>
				<label><![CDATA[Tags]]></label>
			</field>
			<field id="4" size="medium" type="post_image">
				<label><![CDATA[Featured Image]]></label>
				<allowedExtensions><![CDATA[jpg, jpeg, png, gif]]></allowedExtensions>
				<postFeaturedImage><![CDATA[1]]></postFeaturedImage>
			</field>
